@model Category
<h1>Delete Category with Id = @Model.Id</h1>
<form method="post">
    <input asp-for="Id" hidden />
    @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
    <div class="form-group mt-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" disabled />
        
    </div>
    <div class="form-group" mt-3>
        <label asp-for="DisplayOrder"></label>
        <input asp-for="DisplayOrder" type="number" class="form-control" disabled />
        
    </div>
    <button type="submit" class="btn btn-danger mt-4 ">Delete</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary mt-4">Back to list Category</a>
</form>

