@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
<div class="row py-4">
    <div class="col-6">
        <h1>Category list</h1>
    </div>
    <div class="col-6 text-end">
        <a asp-page="./Add" class="btn btn-primary">Create new category</a>
    </div>
</div>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LstCategory.OrderBy(x=> x.DisplayOrder))
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
</table>