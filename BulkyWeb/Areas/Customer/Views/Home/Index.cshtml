@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row pb-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@item.ImgUrl"  class="card-img-top rounded"/>
                        <div class="card-body pb-0">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@item.Title</p>
                            <p class="card-title text-warning text-center">by <b>@item.Author</b></p>
                        </div>
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-center mb-0"> <span class="text-decoration-line-through">@item.ListPrice.ToString("c")</span></p>
                        </div>
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-center">As low as <span>@item.Price100.ToString("c")</span></p>
                        </div>
                        <div>
                            <a href="#" class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    }
</div>