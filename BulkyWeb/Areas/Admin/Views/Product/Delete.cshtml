@model Product
<h1>Delete Product with Id = @Model.Id</h1>
<form method="post">
    <input asp-for="Id" hidden />
    @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
    <div class="form-group mt-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" disabled />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group" mt-3>
        <label asp-for="Description"></label>
        <textarea asp-for="Description" type="text" class="form-control" disabled></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group" mt-3>
        <label asp-for="ISBN"></label>
        <input asp-for="ISBN" type="text" class="form-control" disabled />
        <span asp-validation-for="ISBN" class="text-danger"></span>
    </div>
    <div class="form-group" mt-3>
        <label asp-for="Author"></label>
        <input asp-for="Author" type="text" class="form-control" disabled />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <div class="form-group" mt-3>
        <label asp-for="ListPrice"></label>
        <input asp-for="ListPrice" type="number" class="form-control" disabled />
        <span asp-validation-for="ListPrice" class="text-danger"></span>
    </div>
    <div class="form-group" mt-3>
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" class="form-control" disabled />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group" mt-3>
        <label asp-for="Price50"></label>
        <input asp-for="Price50" type="number" class="form-control" disabled />
        <span asp-validation-for="Price50" class="text-danger"></span>
    </div>
    <div class="form-group" mt-3>
        <label asp-for="Price100"></label>
        <input asp-for="Price100" type="number" class="form-control" disabled />
        <span asp-validation-for="Price100" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-danger mt-4 ">Delete</button>
    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary mt-4">Back to list Product</a>
</form>

